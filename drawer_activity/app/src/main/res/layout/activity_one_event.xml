<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OneEvent">

    <TextView
        android:id="@+id/one_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Event Name"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="106dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_one_evnet"

        android:layout_width="match_parent"

        android:layout_height="290dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/catamaran_bold"
                android:text="Description"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/eventDesc_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:paddingStart="5dp"
                android:text="description of the event"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:paddingStart="5dp"
                    android:text="Planner"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/plannerID_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="TextView"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:paddingStart="5dp"
                    android:text="Team Members"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/teamMembers_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="TextView"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:paddingStart="5dp"
                    android:text="Tasks Assigned"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tasksAssigned_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="TextView"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:paddingStart="5dp"
                    android:text="Notes"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/notes_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/catamaran_bold"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="TextView"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/completeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:outlineAmbientShadowColor="@color/teal_200"
                    android:text="COMPLETE"
                    android:textColor="#03DAC5"
                    android:textSize="20dp"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/teal_200"
                    app:strokeWidth="3dp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.ramotion.circlemenu.CircleMenuView
        android:id="@+id/circle_menu_one_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        app:button_colors="@array/colors"
        app:button_icons="@array/oneEvent_Icons"
        app:icon_color="#FFFFFF" />


</LinearLayout>